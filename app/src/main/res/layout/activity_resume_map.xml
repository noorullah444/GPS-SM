<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/his_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        app:tabIndicatorColor="@color/blue"
        app:tabIndicatorGravity="bottom"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextColor="#ffffff">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/his_tabMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_map_text" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/his_tabGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_graph_text" />
    </com.google.android.material.tabs.TabLayout>

    <com.wonderapps.speedometer.CustomViewPager
        android:id="@+id/his_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>